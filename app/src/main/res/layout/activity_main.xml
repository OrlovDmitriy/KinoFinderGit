<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="@dimen/zero"
        android:layout_height="@dimen/zero"
        android:layout_margin="@dimen/margin_All_Side"
        android:background="@color/green_menu"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/upMenu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/downMenu" />

    <FrameLayout
        android:id="@+id/upMenu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/menu_Height"
        android:background="@color/orange_menu"
        app:layout_constraintBottom_toBottomOf="parent" />

    <FrameLayout
        android:id="@+id/downMenu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/menu_Height"
        android:background="@color/blue_menu"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>